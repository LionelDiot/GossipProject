<div class="container">
 
  <h1>Créer ici un nouveau Gossip : </h1>
  <%= form_tag("/gossips", method: "post") do %>
    <div class="form-group opacity-75 m-2">
      <%= label_tag :title, "Titre" %>
      <%= text_field_tag :title, nil, class: "form-control", required: true, minlength: 3, maxlength: 14, style: "width: 180px" %>
    </div>
    <div class="form-group opacity-75 m-2">
      <%= label_tag :content, "Ton Gossip" %>
      <%= text_area_tag :content, nil, class: "form-control",  required: true, style: "width: 1000px" %>
    </div>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <div class="container">
      <%= submit_tag "Créer ce gossip", class: "btn btn-primary m-2" %>
      <%= link_to "Annuler", home_path, class: "btn btn-secondary m-2" %>
    </div>
  <% end %>
</div>
