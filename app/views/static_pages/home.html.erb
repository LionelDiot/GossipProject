<div class="container">
  <h1>Bienvenue sur la page d'accueil, visiteur !</h1>
  <h2>Gossips existants :</h2>

  <% @gossips.each_with_index do |gossip, index| %>
    <div class="card">
      <div class="card-body">
        <h3 class="card-title"><%= link_to gossip.title, "/gossip/#{index + 1}", style: 'text-decoration:none'%></h3>
        <p class="card-text">Derniere modification le : <%= gossip.updated_at %>, par <%= gossip.user.first_name %> <%= gossip.user.last_name %></p>
      </div>
    </div>
  <% end %>
</div>

