<div class="container">
 
  <h1>Modifie ici le commentaire : </h1>
<%= form_for [@gossip, @comment], url: gossip_comment_path(@gossip, @comment), method: :patch do |f| %>
  <div class="form-group ">
    <%= f.label :content, "Le Commentaire", class: "m-2" %>
    <%= f.text_area :content, class: "form-control opacity-75 ",  required: true, style: "width: 1000px" %>
  </div>

  <div class="form-group">
    <%= link_to "Annuler", @gossip, class: "btn btn-secondary mt-4 me-2" %>
    <%= f.submit "Enregistrer les modifications", class: "btn btn-primary mt-4" %>
  </div>
<% end %>
</div>

