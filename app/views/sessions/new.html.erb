<div class="container">
  <div class="row justify-content-center">
    <div class=" col-md-6 card rounded border border-2 p-2 col-md-3 mx-3 my-3" style="opacity: 0.90; background-color: #862ce6 ">
      <h1 class="text-center">Connecte toi ici !</h1>

      <%= form_with url: sessions_path, method: :post do |form| %>
        <div class="form-group m-2 text-center">
          <label style="font-size: 1.2em;">Ton adresse email :</label>
          <%= form.email_field :email, required: true %>
        </div>

        <div class="form-group m-2 text-center">
          <label style="font-size: 1.2em;">Ton mot de passe : </label>
          <%= form.password_field :password, required: true %>
        </div>

        <div class="container text-center">
          <%= form.submit "Se connecter", class:"btn btn-primary text-center" %>
        </div>
      <% end %>

      
    </div>
  </div>
</div>