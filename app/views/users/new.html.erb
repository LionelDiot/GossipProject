<div class="container">
 
  <h1>Inscris toi ici ! </h1>
  <%= form_for @user  do |form| %>
  <div class="form-group opacity-75 m-2">
    <%= form.label :first_name, "Prénom", class: "m-2" %>
    <%= form.text_field :first_name, class: "form-control opacity-75", required: true, minlength: 3, maxlength: 14, style: "width: 190px" %>
  </div>
  <div class="form-group opacity-75 m-2">
    <%= form.label :last_name, "Nom", class: "m-2" %>
    <%= form.text_field :last_name, class: "form-control opacity-75", required: true, minlength: 3, maxlength: 14, style: "width: 190px" %>
  </div>
  <div class="form-group opacity-75 m-2">
    <%= form.label :email, "Email", class: "m-2" %>
    <%= form.text_field :email, class: "form-control opacity-75", required: true, pattern: '\A[^@\s]+@([^@\s]+\.)+[^@\s]+\z', title: 'Entrez une adresse email valide.', style: "width: 190px" %>
  </div>

  <div class="form-group opacity-75 m-2">
    <%= form.label :password, "Mot de passe", class: "m-2" %>
    <%= form.password_field :password, class: "form-control opacity-75", minlength: 6, required: true, style: "width: 190px" %>
  </div>
  <div class="form-group opacity-75 m-2">
    <%= form.label :password_confirmation, "Confirme ton mot de passe", class: "m-2" %>
    <%= form.password_field :password_confirmation, class: "form-control opacity-75", minlength: 6, required: true, style: "width: 190px" %>
  </div>
  <div class="form-group ">
    <%= form.label :description, "Ta description", class: "m-2" %>
    <%= form.text_area :description, class: "form-control opacity-75 ", style: "width: 500px" %>
  </div>
  <div class="form-group">
    <%= form.label :age, "Age", class: "m-2" %>
    <%= form.number_field :age, class: "form-control opacity-75", required: true, min: 18, style: "width: 100px" %>
  </div>
  <div class="form-group">
    <%= form.label :city_id, "City", class: "m-2" %><br>
    <%= form.collection_select :city_id, City.all, :id, :name, {}, { class: 'form-control' } %>
  </div>
  <%= form.submit "Créer ton profil", class: "btn btn-primary m-2" %>
<% end %>
</div>

